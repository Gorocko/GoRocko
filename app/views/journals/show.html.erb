<div class="mx-auto mt-6 max-w-5xl px-4 sm:px-6 lg:px-8">
  <%= render PageHeaderComponent.new(header_name: 'Journal Information',
                                     primary_button_title: "Edit Journal",
                                     primary_button_link:edit_journal_url(@journal),
                                     subtitle: "Journal for: #{@journal.loggable.name}",
                                     secondary_button_title: "",
                                     secondary_button_link: '') do |header| %>
    <%= header.with_avatar do %>
      <%= image_tag avatar_url_for(@journal.loggable), class: "h-16 w-16 rounded-full" %>
    <% end %>
  <% end %>
  <div class="border-t border-gray-200">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Title</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @journal.title %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500"> Created at </dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @journal.created_at %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Added by</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @journal.author.name %></dd>
      </div>
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Content</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= @journal.notes %>
        </dd>
      </div>
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Tags</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= render TagsComponent.new(tags: @journal.tag_list) %>
        </dd>
      </div>
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Photos</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <ul role="list" class="border border-gray-200 rounded-md divide-y divide-gray-200">
            <% @journal.photos.each do |photo| %>
              <%= render Attachment::PhotoComponent.new(photo: photo) %>
            <% end %>
          </ul>
        </dd>
      </div>
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Files</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <ul role="list" class="border border-gray-200 rounded-md divide-y divide-gray-200">
            <% @journal.files.each do |file| %>
              <%= render Attachment::FileComponent.new(file: file) %>
            <% end %>
          </ul>
        </dd>
      </div>
    </dl>
  </div>
</div>