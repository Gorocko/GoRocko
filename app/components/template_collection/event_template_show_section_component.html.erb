<li class="bg-white shadow overflow-hidden px-4 py-4 sm:px-6 sm:rounded-md">
  <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
    <dt class="text-sm font-medium text-gray-500"> Reminder title </dt>
    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @event_template.title %></dd>
  </div>
  <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
    <dt class="text-sm font-medium text-gray-500"> Description</dt>
    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @event_template.description %></dd>
  </div>
  <% if !@event_template.is_head %>
    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
      <dt class="text-sm font-medium text-gray-500">Days gap from last event</dt>
      <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"> <%= @event_template.days_delta_from_last %></dd>
    </div>
  <% end %>
</li>
