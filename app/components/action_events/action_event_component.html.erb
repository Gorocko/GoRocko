<div class="mx-auto mt-6 max-w-5xl px-4 sm:px-6 lg:px-8">
  <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">Title</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @action_event.title %></dd>
    </div>

    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">Due Date</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @action_event.due_date %></dd>
    </div>

    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">Recurrent Event</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= if @is_recurrent_event
                                                   'Yes'
                                                 else
                                                   'No'
                                                 end %></dd>
    </div>
    <% if @is_recurrent_event %>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Recurrent Rule</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @recurrent_rule %></dd>
      </div>
    <% end %>

    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">Status</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @action_event.status %></dd>
    </div>
    <div class="sm:col-span-2">
      <dt class="text-sm font-medium text-gray-500">Description</dt>
      <dd class="mt-1 max-w-prose space-y-5 text-sm text-gray-900">
        <p><%= @action_event.description %></p>
      </dd>
    </div>
    <div class="sm:col-span-2">
      <dt class="text-sm font-medium text-gray-500">Tags</dt>
      <dd class="mt-1 max-w-prose space-y-5 text-sm text-gray-900">
        <%= render TagsComponent.new(tags: @action_event.tag_list) %>
      </dd>
    </div>
  </dl>
</div>
<div class="mx-auto mt-8 max-w-5xl px-4 pb-12 sm:px-6 lg:px-8">
  <h2 class="text-sm font-medium text-gray-500">Related Dogs</h2>
  <div class="mt-1 grid grid-cols-1 gap-4 sm:grid-cols-2">
    <% @action_event.dogs.each do |dog| %>
      <%= render ActionEvents::ShowViewDogMemberComponent.new(dog: dog) %>
    <% end %>
  </div>
</div>