
<div class="space-y-6 sm:space-y-5">
  <div class="pt-5">
    <div class="flex justify-end">
      <% css_config = (@css_config_override or
        "ml-3 inline-flex justify-center py-2 px-4 border
         border-transparent shadow-sm text-sm font-medium
         rounded-md text-white bg-indigo-600 hover:bg-indigo-700
         focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500") %>
      <% if @button_override_text.nil? %>
        <%= @form.submit class: css_config %>
      <% else %>
        <%= @form.submit @button_override_text, class: css_config %>
      <% end %>
    </div>
  </div>
</div>
